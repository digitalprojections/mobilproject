<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/o_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill|fill_horizontal|end"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="sample"
        android:textSize="18sp"
        android:visibility="gone"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/o_ayahno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ayah_symbol_mdpi"
        android:gravity="center_horizontal|center_vertical"
        android:text="1"
        android:textSize="12sp"
        android:visibility="gone"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="7dp" />

    <LinearLayout
        android:id="@+id/arabictranslation"
        style="@style/ayahlistitem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/trbg"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/uzbektranslation"
        style="@style/Platform.Widget.AppCompat.Spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arabictranslation">

    </LinearLayout>


</android.support.constraint.ConstraintLayout>