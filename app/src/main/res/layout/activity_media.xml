<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mp_main_linear_layout"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_on_secondary"
    android:orientation="vertical"
    tools:context=".MediaActivity">


    <Spinner
        android:id="@+id/mp_language_spinner"
        style="@android:style/Widget.Holo.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/mp_reciter_spinner"
        style="@android:style/Widget.Holo.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/mp_recitationstyle_spinner"
        style="@android:style/Widget.Holo.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/mp_actions_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0"
        android:clickable="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/mp_playmode_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/custom_ripple_media"
            android:clickable="true"
            android:contentDescription="@string/play"
            android:focusable="auto"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_playlist_play_black_24dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mp_player_ll"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/trbg"
        android:gravity="center|center_vertical"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/mp_previous"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/custom_ripple_media"
            android:clickable="true"
            android:focusable="auto"
            app:srcCompat="@drawable/ic_fast_rewind_black_32dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/mp_play_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/custom_ripple_media"
            android:clickable="true"
            android:focusable="auto"
            app:srcCompat="@drawable/ic_play_circle_48dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/mp_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/custom_ripple_media"
            android:clickable="true"
            android:focusable="auto"
            app:srcCompat="@drawable/ic_fast_forward_black_32dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/mp_current_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:fontFamily="monospace"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="#FF8A65" />

    <SeekBar
        android:id="@+id/mp_seekBar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/favorites_bg" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mp_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:listitem="@layout/playlist_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/mp_imageButton_dl"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_file_download_done" />

        <ImageButton
            android:id="@+id/mp_imageButton_pl"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_playlist_24dp" />
    </LinearLayout>

</LinearLayout>