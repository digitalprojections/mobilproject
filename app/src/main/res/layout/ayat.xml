<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:textDirection="anyRtl">


    <LinearLayout
        android:id="@+id/arabictranslation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp" />

    <LinearLayout
        android:id="@+id/uzbektranslation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp" />

    <LinearLayout
        android:id="@+id/othertranslation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/o_ayahno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ayah_symbol_mdpi"
            android:gravity="center_horizontal|center_vertical"
            android:text="1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/o_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="fill|fill_horizontal|end"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="sample"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>