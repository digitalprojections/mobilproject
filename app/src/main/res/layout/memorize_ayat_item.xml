<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/memorization_list_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/h_mem_ar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A103A9F4"
        android:gravity="center_vertical|end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/memorization_arabic_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:layoutDirection="rtl"
            android:minHeight="44dp"
            android:padding="5dp"
            android:singleLine="false"
            android:text="Arabic"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textDirection="anyRtl"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/arab_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="0"
                android:background="@drawable/ayahsymbol"
                android:gravity="center"
                android:textColor="#000000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/audio_file_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_weight="0"
                android:background="@drawable/ic_audio_missing"
                android:gravity="center"
                android:textColor="#000000"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/progressBarVerse"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:indeterminate="true"
                android:maxWidth="24dp"
                android:maxHeight="24dp"
                android:minWidth="16dp"
                android:minHeight="16dp"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/transliteration_tv"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#DCEDC8"
        android:fadingEdge="vertical"
        android:layoutDirection="rtl"
        android:padding="5dp"
        android:text="transliteration"
        android:textAlignment="textStart"
        android:textSize="18sp" />


</LinearLayout>