<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/memorization_list_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F4C3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/memorization_arabic_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="#F0F4C3"
            android:layoutDirection="rtl"
            android:minHeight="44dp"
            android:padding="5dp"
            android:text="Arabic"
            android:textAlignment="textEnd"
            android:textColor="@color/common_google_signin_btn_text_light_focused"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/arab_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/ayahsymbol"

            android:gravity="center"
            android:textColor="#000000" />

    </LinearLayout>


    <TextView
        android:id="@+id/transliteration_tv"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#DCEDC8"
        android:fadingEdge="vertical"
        android:layoutDirection="rtl"
        android:padding="5dp"
        android:text="transliteration"
        android:textAlignment="textStart"
        android:textSize="18sp" />


</LinearLayout>